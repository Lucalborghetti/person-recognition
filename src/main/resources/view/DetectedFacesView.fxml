<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" maxHeight="100.0" maxWidth="1.7976931348623157E308" prefHeight="100.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="faceImageView" fitHeight="92.0" fitWidth="110.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/default.png" />
         </image>
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </ImageView>
      <Label fx:id="nameLabel" prefHeight="17.0" prefWidth="140.0" text="Firstname Lastname">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin></Label>
      <Button fx:id="showKnownInfoButton" mnemonicParsing="false" onAction="#showInformations" text="Show known informations">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin></Button>
      <ComboBox fx:id="apparitionsCmb" onAction="#showSelectedFrame" prefHeight="25.0" prefWidth="150.0" promptText="Apparitions" visibleRowCount="5" />
   </children>
   <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
   </padding>
</HBox>
